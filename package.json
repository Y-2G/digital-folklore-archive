{
  "name": "digital-folklore-archive",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "firebase:emulator": "firebase emulators:start",
    "firebase:deploy:rules": "firebase deploy --only firestore:rules",
    "firebase:deploy:indexes": "firebase deploy --only firestore:indexes",
    "db:seed": "npx ts-node scripts/seed-firestore.ts",
    "admin:set": "npx ts-node scripts/set-admin-claim.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f firebase",
    "docker:reset": "docker compose down && rm -rf firebase-data && docker compose up -d",
    "docker:build": "docker compose build --no-cache"
  },
  "dependencies": {
    "firebase": "^12.8.0",
    "firebase-admin": "^13.6.0",
    "next": "16.1.3",
    "next-intl": "^4.7.0",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
